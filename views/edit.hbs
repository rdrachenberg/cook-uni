{{>header}}
{{#if recipe}}
    <form class="text-center p-5 form-layout" action="#/edit/{{recipe._id}}" method="PUT" id="edit-receipt-form">
        <p class="h4 mb-4">Edit Recipe</p>

        <input type="text" id="defaultRecepieEditMeal" name="meal" class="form-control mb-4" placeholder="{{recipe.meal}}" value="">

        <input type="text" id="defaultRecepieEditIngredients" name="ingredients" class="form-control mb-4"
            placeholder="{{recipe.ingredients}}" value="">

        <textarea type="text" id="defaultRecepieEditMethodOfPreparation" name="prepMethod" class="form-control mb-4"
            placeholder="{{recipe.prepMethod}}" ></textarea>

        <textarea type="text" id="defaultRecepieEditDescription" name="description" class="form-control mb-4"
            placeholder="{{recipe.description}}"></textarea>

        <input type="text" id="defaultRecepieEditFoodImageURL" name="foodImageURL" class="form-control mb-4"
            placeholder="{{recipe.foodImageURL}}" value="">

        <select name="category" class="required">
            <option selected>Select category...</option>
            <option>Vegetables and legumes/beans</option>
            <option>Fruits</option>
            <option>Grain Food</option>
            <option>Milk, cheese, eggs and alternatives</option>
            <option>Lean meats and poultry, fish and alternatives</option>
        </select>
        <button class="btn btn-danger w-25 m-auto my-4 btn-block" type="submit">Edit it</button>
    </form>

    <div id="notifications">
        <div id="successBox" class="alert alert-success alert-dismissible fade show" role="alert">Successful Uploaded!</div>
        <div id="loadingBox" class="alert alert-info alert-dismissible fade show" role="alert">Loading...</div>
        <div id="errorBox" class="alert alert-danger alert-dismissible fade show" role="alert">Error! Please Check Hilighted
            Box</div>
    </div>
{{/if}}
{{>footer}}