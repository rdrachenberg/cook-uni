{{>header}}
    <h1 class="text-center">Our Recipes</h1>
    <div id="sharedRecipes">
        {{#if hasRecipes}}
        {{#each recipe}}
            <h2>{{meal}}</h2>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="our-team-main">
                            <div class="team-front">
                                <img src="{{categoryImageURL}}"/>
                                <h3>{{meal}}</h3>
                                <p>{{category}}</p>
                            </div>
                            <div class="team-back">
                                <div class="back-side-info">
                                    <h4>Ingredients</h4>
                                    {{#each ingredients}}
                                        <ul>
                                            <li>{{this}}</li>
                                        </ul>
                                    {{/each}}
                                    <a href="#/details/{{_id}}">View the recepie</a>
                                </div>
                                <img class="foodImage"src="{{foodImageURL}}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
        {{else}}
            <a href="/">
                <div id='foodNotFound' stylemargin="40px">
                    <img src="https://t4.ftcdn.net/jpg/00/62/17/31/240_F_62173114_ozantkVtkPgzL0fxssAkTqKX1FHPr0UW.jpg" />
                    <h3>Food not found...</h3>
                </div>
            </a>
        {{/if}}
    </div>
{{>footer}}